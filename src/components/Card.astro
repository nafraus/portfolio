---
const {coverImage, title, tags} = Astro.props;
---

<style>

    .card {
        background: blue;
        width: 12rem;
        height: 20rem;
        display: block;
        border: 3px solid rgb(65, 65, 65);
        border-radius: 30px;
        overflow: hidden;
        margin: 1rem auto;
    }

  .coverImage {
    display: block;
    width : 100%;
    height: 60%;
  }

    .info {
        background: green;
        height: 25%;
        display: flex;
        justify-content: space-between;
    }

    .cardTitle {
        padding-left: 10px;
        font-size: 14px;
        font-weight: bold;
        color: white;
    }

    .cardDate {
        padding-right: 10px;
        font-size: 14px;
        color: white;
    }

    .cardTags {
        display: flex;
        background: purple;
        margin-left: 10px;
        flex-wrap: wrap;
    }

    .cardTag{
        border-width: 0.08rem;
        border-radius: 0.1rem;
        border-style: solid;
        color : rgb(106, 248, 106);
        padding: 0.1rem;
        margin-left: 5px;
        margin-top: 5px;
        font-size: 1rem;
        height: fit-content;
    }

</style>


<div class="card">
    <img src={coverImage} alt={``} class="coverImage" />
    <div class="info">
      <p class="cardTitle">{title}</p>
      <p class="cardDate">4/25 -Now</p>
    </div>
    <div class="cardTags">
        {tags.map( (tag:string) => (
            <div class="cardTag">{tag}</div>
        ))}
    </div>
</div>
